---
import Layout from "@layouts/Layout.astro";
---

<Layout>
  <section
    class="bg-[url('/src/lib/bg-light-grainy.webp')] py-24 px-4 sm:px-6 lg:px-8"
  >
    <div class="max-w-3xl mx-auto">
      <div class="space-y-4">
