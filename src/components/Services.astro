---
import { getI18N } from "@src/i18n/index";
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "@src/i18n/utils";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const services = [
  {
    icon: "../../feather-sprite.svg#layout",
    title: i18n.SERVICES_SEC.SERVICE_1.TITLE,
    description: i18n.SERVICES_SEC.SERVICE_1.DESCRIPTION,
  },
  {
    icon: "../../feather-sprite.svg#smartphone",
    title: i18n.SERVICES_SEC.SERVICE_2.TITLE,
    description: i18n.SERVICES_SEC.SERVICE_2.DESCRIPTION,
  },
  {
    icon: "../../feather-sprite.svg#pen-tool",
    title: i18n.SERVICES_SEC.SERVICE_3.TITLE,
    description: i18n.SERVICES_SEC.SERVICE_3.DESCRIPTION,
  },
  {
    icon: "../../feather-sprite.svg#code",
    title: i18n.SERVICES_SEC.SERVICE_4.TITLE,
    description: i18n.SERVICES_SEC.SERVICE_4.DESCRIPTION,
  },
];
---

<div
  class="relative z-20 pb-36 pt-56 px-4 -mt-24 rounded-b-[124px] bg-[url('/src/lib/bg-light-grainy.webp')]"
>
  <div class="max-w-7xl mx-auto">
    <div class="relative flex items-center justify-center mb-16">
      <div id="services-section" class="border-t border-gray-300 w-full"></div>
      <span
        class="absolute px-8 py-3 bg-white text-xl rounded-full text-gray-800 font-medium shadow-sm"
      >
        {i18n.SERVICES_SEC.TITLE}
      </span>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        services.map((service) => (
          <div class="flex flex-col items-center text-center">
            <div class="mb-6">
              <svg class="feather">
                <use href={service.icon} />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-3">
              {service.title}
            </h3>
            <p class="text-gray-600 leading-relaxed">{service.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</div>
