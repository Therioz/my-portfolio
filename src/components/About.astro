---
import { getI18N } from "@src/i18n/index";
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "@src/i18n/utils";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const lang = getLangFromUrl(Astro.url);
---

<section class="bg-[url('/lib/bg-dark-grainy.webp')] py-64 -mt-24 z-0">
  <div class="max-w-7xl mx-auto">
    <div class="relative flex items-center justify-center mb-16">
      <div id="aboutme-section" class="border-t border-gray-300 w-full"></div>
      <span
        class="absolute px-8 py-3 bg-white text-xl rounded-full text-gray-800 font-medium shadow-sm"
      >
        {i18n.ABOUT_ME.TITLE}
      </span>
    </div>
    <div class="relative border-l-4 border-gray-300 ml-3">
      <div class="mb-8 flex items-center">
        <div
          class="absolute w-3 h-3 bg-blue-500 rounded-full -left-1.5 border border-white"
        >
        </div>
        <h3 class="text-xl font-semibold text-gray-900 ml-6">
          {i18n.ABOUT_ME.ABOUT_1.TITLE}
        </h3>
      </div>
      <div class="mb-8 ml-6">
        <p class="text-gray-700 mb-4">
          {i18n.ABOUT_ME.ABOUT_1.DESCRIPTION_1}
        </p>
        <p class="text-gray-700 mb-4">
          {i18n.ABOUT_ME.ABOUT_1.DESCRIPTION_2}
        </p>
      </div>
      <div class="mb-8 flex items-center">
        <div
          class="absolute w-3 h-3 bg-green-500 rounded-full -left-1.5 border border-white"
        >
        </div>
        <h3 class="text-xl font-semibold text-gray-900 ml-6">
          {i18n.ABOUT_ME.ABOUT_2.TITLE}
        </h3>
      </div>
      <div class="mb-8 ml-6">
        <p class="text-gray-700">
          {i18n.ABOUT_ME.ABOUT_2.DESCRIPTION_1}
        </p>
      </div>
      <div class="mb-8 flex items-center">
        <div
          class="absolute w-3 h-3 bg-red-500 rounded-full -left-1.5 border border-white"
        >
        </div>
        <h3 class="text-xl font-semibold text-gray-900 ml-6">
          {i18n.ABOUT_ME.ABOUT_3.TITLE}
        </h3>
      </div>
      <div class="ml-6">
        <p class="text-gray-700">
          {i18n.ABOUT_ME.ABOUT_3.DESCRIPTION_1}
        </p>
      </div>
    </div>
  </div>
</section>
